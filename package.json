{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "preview": "cross-env NODE_ENV=production node server",
    "lint:js": "eslint --ext .ts,.tsx,.vue .",
    "lint:css": "stylelint './**/*.{vue,css,scss,less}'",
    "type-check": "vue-tsc --noEmit --skipLibCheck",
    "format-check": "prettier --check .",
    "format-fix": "pnpm format-check --write",
    "spell-check": "cspell lint --no-progress '**'",
    "ci-check": "pnpm exec npm-run-all --parallel --aggregate-output --print-name spell-check lint:js lint:css format-check type-check build",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.35.2",
    "@vueuse/core": "^10.9.0",
    "@vueuse/head": "^2.0.0",
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "pinia": "^2.1.7",
    "sirv": "^2.0.4",
    "tsx": "^4.9.3",
    "vue": "^3.4.23",
    "vue-i18n": "9",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "@intlify/eslint-plugin-vue-i18n": "^2.0.0",
    "@kwai-explore/eslint-config": "^0.6.0",
    "@kwai-explore/stylelint-config": "^0.1.0",
    "@kwai-explore/tsconfig": "^0.0.3",
    "@rushstack/eslint-patch": "^1.8.0",
    "@types/color-string": "^1.5.5",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-vue": "^5.0.4",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "cspell": "^7.3.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import-isolation": "^0.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rollup-plugin-analyzer": "^4.0.0",
    "sass": "^1.77.0",
    "stylelint": "^15.11.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vue-tsc": "^2.0.14"
  }
}
